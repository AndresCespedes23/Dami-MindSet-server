{
  "extends": ["airbnb-base"],
  "rules": {
    "eqeqeq": "error",
    "no-console": "warn",
    "quotes": ["error", "double"],
    "semi": [2, "always"],
    "no-plusplus": 0,
    "no-underscore-dangle": 0,
    "linebreak-style": 0
  },
  "parserOptions": {
    "ecmaVersion": 12
  },
  "env": {
    "browser": true,
    "node": true,
    "es2021": true,
    "jest": true
  },
  "ignorePatterns": ["node_modules", "build", "dist", "public", "readme.md"]
}