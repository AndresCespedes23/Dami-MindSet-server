{
  "extends": ["eslint:recommended"],
  "rules": {
    "eqeqeq": "error",
    "no-console": "warn",
    "quotes": ["error", "double"],
    "semi": [2, "always"]
  },
  "parserOptions": {
    "ecmaVersion": 12
  },
  "env": {
    "browser": true,
    "node": true,
    "es2021": true,
    "jest": true
  },
  "ignorePatterns": ["node_modules", "build", "dist", "public", "readme.md"]
}
